
@{
    ViewBag.Title = "My Applications";
}
@model IEnumerable<DX.AzureAD.EasyOAuth.Models.ApplicationModel>
<h2>My Applications</h2>
<p>
    @Html.ActionLink("Register Application", "Add")
</p>
<div class="form-group">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Application</th>
                <th>Client Id</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CliendId</td>
                    <td>
                        (@{
                            RouteValueDictionary routeValues1 = new RouteValueDictionary();
                            routeValues1.Add("id", item.CliendId);
                            @Html.ActionLink("edit", "Update", "Application", routeValues1, null);
                        }) / (@{
                            @Html.ActionLink("delete", "Delete", "Application", routeValues1, null);
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



